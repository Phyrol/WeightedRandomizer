{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "warnOnUnsupportedTypeScriptVersion": false,
        "sourceType": "module"
    },
    "env": {
        "browser": false,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/stylistic"
    ],
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-local"
    ],
    "ignorePatterns": [
        "**/node_modules/**",
        "**/dist/**"
    ],
    "rules": {
        // eslint
        "dot-notation": "error",
        "eqeqeq": "error",
        "no-caller": "error",
        "no-unused-vars": ["error", {
            "vars": "all",
            "args": "all",
            "ignorePatterns": "^_"
        }],
        "no-eval": "error"
    }
}